<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table id='posts'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to post do %>
            <i class="fa fa-eye" style="font-size:12px"></i>
          <% end %>
        </td>
        <td><%= link_to edit_post_path(post) do %>
            <i class="fa fa-edit" style="font-size:12px"></i>
          <% end %>
        </td>
        <td><%= link_to post, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash" style="font-size:12px"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'button blueButton' %>
